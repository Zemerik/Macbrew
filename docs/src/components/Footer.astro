      </div>

      <!-- Documentation -->
      <div>
        <h3 class="text-sm font-semibold text-dark-900 dark:text-white uppercase tracking-wider mb-4">
          Documentation
        </h3>
        <ul class="space-y-2">
          <li>
            <a href="/docs/getting-started" class="text-dark-600 dark:text-dark-300 hover:text-dark-900 dark:hover:text-white transition-colors">
              Getting Started
